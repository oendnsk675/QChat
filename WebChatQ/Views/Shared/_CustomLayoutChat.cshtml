@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebChatQS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebChatQ.styles.css" asp-append-version="true" />
    <style>
        .primary-color {
            color: white !important;
        }

        .primary-bg-color {
            background: #222831 !important;
        }

        .secondary-bg-color {
            background: #393E46 !important;
        }

        .third-bg-color {
            background: #8e949d7d !important;
        }

        .red-bg-color {
            background: #e97979 !important;
        }
    </style>
</head>
<body class="primary-bg-color bg-image-grid overflow-hidden">
    <header class="d-lg-none">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-white border-bottom box-shadow mb-3 p-0 border-0">
            <div class="container-fluid secondary-bg-color primary-color align-items-center d-flex nav-custom">
                <a class="navbar-brand primary-color" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo-red.png" width="42px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link primary-color" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link primary-color" asp-area="" asp-controller="Chat" asp-action="Index">Chat Room</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
